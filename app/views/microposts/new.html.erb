<div class="micropost_post">
  <%= form_for(@micropost) do |f| %>
    <%# <%= render 'shared/error_messages', object: f.object %>
    <p>
      <%= f.text_area :content, placeholder: "140字以内でお願いします。", class: "micropost_post_holder" %>
    </p>
    <p>
      <%= f.file_field :picture, accept: 'image/jpeg,image/png' %>
    </p>
    <p>
      <%= f.submit "Post", class: "micropost_post_btn"%>
    </p>
  <% end %>
</div>
