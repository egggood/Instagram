<%= image_tag(@micropost.picture.url) %>
<%= @micropost.content %>
<%= render 'microposts/like_form' %>



<% @replies.each do |reply| %>
  <%= reply.content %>
  <%= form_for(@reply, url: reply_path(reply.id), method: :delete) do |f| %>
    <%= hidden_field_tag :micropost_id, @micropost.id %>
    <%= f.submit "返信を削除する" %>
  <% end %>
<% end %>

