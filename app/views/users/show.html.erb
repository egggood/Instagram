<% provide(:title, "#{@user.name}") %>
<%= render 'users/user' %>
<%= render 'shared/stats.html' %>
<% if current_user == @user %>
<%= link_to("編集する", edit_user_path(@user.id)) %>
<% else %>
<%= render 'users/follow_form' %>
<% end %>

<% will_paginate(@microposts) %>
<% @microposts.each do |micropost| %>
<%= link_to(image_tag(micropost.picture.url), micropost_path(micropost.id)) if micropost.picture? %>
<%= link_to("投稿を削除する", micropost_path(micropost), method: :delete) %>
<% end %>
<% will_paginate @microposts %>
