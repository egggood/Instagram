<% provide(:title, "#{@user.name}") %>
<div class="container">
  <div class="container_user_info clearfix">
    <%= render partial: 'users/user', locals: { user: @user} %>
    <%= render 'shared/stats.html' %>
    <section class="self_introduction">
      <%= @user.self_introduction %>
    </section>
    <section>
      <ul>
        <% if current_user == @user %>
        <li class="btn">
          <%= link_to("編集", edit_user_path(@user.id)) %>
        </li>
        <li class="btn">
          <%= link_to '投稿', new_micropost_path %>
        </li>
        <% else %>
        <li class="btn"><%= render 'users/follow_form' %></li>
        <% end %>
      </ul>
    </section>
  </div>
  <div class="container_post scroll_content">
    <%= render partial: 'shared/micropost', collection: @microposts %>
  </div>
</div>
