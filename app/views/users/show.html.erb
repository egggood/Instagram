<% provide(:title, "#{@user.name}") %>
<div class="container">
  <div class="container_user_info clearfix">
    <%= render 'users/user' %>
    <%= render 'shared/stats.html' %>
    <section class="self_introduction">
      <%= @user.self_introduction %>
    </section>
    <section>
      <ul>
        <% if current_user == @user %>
        <li class="btn">
          <%= link_to("編集", edit_user_path(@user.id)) %>
        </li>
        <li class="btn">
          <%= link_to '投稿', new_micropost_path %>
        </li>
        <% else %>
        <li class="btn"><%= render 'users/follow_form' %></li>
        <% end %>
      </ul>
    </section>
  </div>

  <div class="container_post scroll_content">
    <% will_paginate(@microposts) %>
    <% @microposts.each do |micropost| %>
    <div>
      <% if micropost.picture? %>
      <%= link_to(image_tag(micropost.picture.url), micropost_path(micropost.id)) %>
      <%= link_to("投稿を削除する", micropost_path(micropost), method: :delete) %>
      <% end %>
    </div>
    <% end %>
    <% will_paginate @microposts %>
  </div>
</div>
